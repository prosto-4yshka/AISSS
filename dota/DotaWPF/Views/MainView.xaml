<Window x:Class="DotaWPF.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DOTA 2 Hero Manager (MVVM)" Height="550" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая часть: Список героев -->
        <GroupBox Grid.Column="0" Header="Список героев" Margin="0,0,10,0">
            <DockPanel>
                <ListBox ItemsSource="{Binding Heroes}" 
                         SelectedItem="{Binding SelectedHero}"
                         DisplayMemberPath="Name"
                         Margin="5"/>
            </DockPanel>
        </GroupBox>

        <!-- Правая часть: Управление -->
        <GroupBox Grid.Column="1" Header="Управление">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock Text="Имя:" Margin="0,5"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Роль:" Margin="0,5"/>
                    <ComboBox ItemsSource="{Binding Roles}" 
                              SelectedItem="{Binding Role}"/>

                    <TextBlock Text="Атрибут:" Margin="0,5"/>
                    <ComboBox ItemsSource="{Binding Attributes}" 
                              SelectedItem="{Binding Attribute}"/>

                    <TextBlock Text="Сложность:" Margin="0,5"/>
                    <Slider Minimum="1" Maximum="3" 
                            Value="{Binding Complexity}"
                            TickFrequency="1" IsSnapToTickEnabled="True"/>
                    <TextBlock Text="{Binding Complexity}" HorizontalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="Создать" Command="{Binding CreateCommand}" Margin="5" Width="80"/>
                        <Button Content="Обновить" Command="{Binding UpdateCommand}" Margin="5" Width="80"/>
                        <Button Content="Удалить" Command="{Binding DeleteCommand}" Margin="5" Width="80"/>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Поиск по роли:" Margin="0,5"/>
                    <ComboBox ItemsSource="{Binding SearchRoles}" 
                              SelectedItem="{Binding SearchRole}"/>
                    <Button Content="Найти по роли" Command="{Binding FindByRoleCommand}" Margin="0,5"/>

                    <Button Content="Группировать по атрибуту" 
                            Command="{Binding GroupByAttributeCommand}" 
                            Margin="0,5"/>

                    <Separator Margin="0,10"/>

                    <!-- Пагинация -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="← Назад" Command="{Binding PrevPageCommand}" Margin="5" Width="80"/>
                        <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="из" VerticalAlignment="Center" Margin="5"/>
                        <TextBlock Text="{Binding TotalPages}" VerticalAlignment="Center" Margin="5"/>
                        <Button Content="Вперед →" Command="{Binding NextPageCommand}" Margin="5" Width="80"/>
                    </StackPanel>

                    <Button Content="Обновить список" Command="{Binding RefreshCommand}" Margin="0,10"/>

                    <!-- Статус -->
                    <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10" Padding="5">
                        <ScrollViewer MaxHeight="100">
                            <TextBlock Text="{Binding StatusMessage}" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>